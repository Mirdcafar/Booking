@model Shop.Models.Hotels

<div class="hotel-details">

    <div class="flexe">
        <div class="hotel-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
        </div>

        <div class="hotel-info">
            <h2>@Model.Name</h2>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
        <a class="btn btn-primary" asp-action="Orders" asp-route-id="@Model.Id">Reserve</a>

    </div>

    <div class="hotel-categories">
        <form method="post">
            <label asp-for="Name">Name*</label>
            <input type="text" asp-for="Name" placeholder="Name*"/>
            <label asp-for="Description">Description*</label>
            <input type="text" asp-for="Description" placeholder="Description*" />
            <button type="submit">Send</button>
        </form>
        <h3>Comments:</h3>
     
        @if (Model.Comments != null && Model.Comments.Any())
        {
            <ul class="row list-unstyled">
                @foreach (var comment in Model.Comments)
                {
                    <li class="col-lg-6 col-md-12">
                        <div class="comment-item">
                            <div class="comment-content">
                                <div class="comment-header">
                                    <img src="@comment.logoImage" alt="@comment.Name" class="comment-logo" />
                                    <span class="comment-name">@comment.Name</span>
                                </div>
                                <p class="comment-description">@comment.Description</p>
                                
                            </div>
                        </div>
                    </li>
                }
            </ul>

        }
        else
        {
            <p>coment</p>
        }
    </div>

    <div class="back-link">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Hotel List</a>
    </div>
</div>
