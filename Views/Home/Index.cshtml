<div class="container">
    <div class="titles">
        <p>Still interested in these properties?</p>
    </div>
    <div class="row">
        @foreach (var hotel in Model.Hotels)
        {
            <div class="col-lg-3 col-md-6 col-12">
                <div class="cart">
                    <a class="bg-white" asp-controller="Details" asp-action="Index" asp-route-id="@hotel.Id">
                    <div class="cart_img">
                            <img src="@hotel.ImageUrl" alt="">
                    </div>
                    </a>
                    <div class="cart_content">
                        <h5>@hotel.Name</h5>
                        <p>@hotel.Country</p>
                        <div class="d-flex">
                            <div class="reiting">@hotel.Rating</div>
                                <p>endpoint</p>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>
<div class="container">
    <div class="titles">
        <p>Offers</p>
        <span>Promotions, deals, and special offers for you</span>
    </div>
    <div class="image_url">
        <div class="url_count">
            <p>Seize the moment!</p>
            <p>Save 15% or more when you book and stay before October 1, 2024</p>
            <br>
            <button>Find Getaway Deals</button>
        </div>
    </div>
</div>
<div class="container">
    <div class="titles">
        <p>Explore Azerbaijan</p>
        <span>These popular destinations have a lot to offer</span>
    </div>
    <div class="swiper mt-5 mb-5">
        <div class="swiper-wrapper">
            @foreach (var category in Model.Categories)
            {
                <div class="swiper-slide font">
                    <div class="slide-cart">
                        <img src="@category.ImageUrl" alt="@category.CategoryName" />
                    </div>
                    <h4>@category.CategoryName</h4>
                    <p>endpoint</p> 
                </div>
            }

        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</div>
<div class="container">
    <div class="url d-flex row">
        <div class="url_image col-lg-2 col-12">
            <img src="https://t-cf.bstatic.com/design-assets/assets/v3.122.0/illustrations-traveller/GlobeGeniusBadge.png"
                 alt="">
        </div>
        <div class="url_cont col-lg-5 col-12">
            <div class="titl">
                <h3>Get instant discounts</h3>
                <p>Just sign into your Booking.com account and look for the blue Genius logo to save</p>
                <div class="d-flex pt-3">
                    <a asp-controller="Acount" asp-action="Login" class="sign_in_btn">Sign in</a>
                    <a asp-controller="Acount" asp-action="Register" class="register_btn">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
