@model IEnumerable<Shop.Models.Orders>

<div class="container">
    <h2>Orders</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Comment</th>
                <th>Total Price</th>
                <th>Hotel Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.Address</td>
                    <td>@order.Email</td>
                    <td>@order.Phone</td>
                    <td>@order.Comment</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.Hotel.Name</td> <!-- Assuming Hotel has a Name property -->
                </tr>
            }
        </tbody>
    </table>

</div>
