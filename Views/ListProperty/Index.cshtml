@model Shop.Models.Hotels

@{
    ViewData["Title"] = "Create";
}
<div class="container d-flex justify-content-center my-5">

    <div>
        <h1>Create</h1>

        <h4>Hotels</h4>


        <hr />
        <div class="fadeInUpzer">
            <form asp-controller="ListProperty" asp-action="Index" class=" row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-6">
                    <input asp-for="Name" placeholder="HotelName*" class="text-input my-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input asp-for="Price" placeholder="Price*" class="text-input my-2" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input asp-for="ImageUrl" placeholder="ImageUrl*" class="text-input my-2" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input asp-for="Description" placeholder="Description*" class="text-input my-2" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input asp-for="PeopleCount" placeholder="PeopleCount*" class="text-input my-2" />
                    <span asp-validation-for="PeopleCount" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input asp-for="RoomCount" placeholder="RoomCount*" class="text-input my-2" />
                    <span asp-validation-for="RoomCount" class="text-danger"></span>
                </div>
                <div class="col-lg-12">
                    <input asp-for="Rating" placeholder="Rating*" class="text-input my-2" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <select asp-for="Country" class="text-input my-2" asp-items="ViewBag.Country"></select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-lg-6 ">
                    <select asp-for="HotelCategoriesId" class="text-input my-2" asp-items="ViewBag.HotelCategoriesId"></select>
                </div>
                <div class="col-lg-12 my-3">
                    <button type="submit" class="bt-mee">
                        Send Message
                    </button>
                </div>
            </form>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>

</div>